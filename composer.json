{
    "name": "daniyel/slim-rest",
    "description": "An example of Slim Framework REST api",
    "keywords": ["microframework", "rest", "router", "psr7", "api", "example"],
    "homepage": "http://github.com/daniyel/slim-rest",
    "license": "MIT",
    "authors": [
        {
            "name": "Danijel Hrvacanin",
            "email": "me@example.org",
            "homepage": "http://github.com/daniyel"
        }
    ],
    "require": {
        "php": ">=5.5.0",
        "slim/slim": "^3.1",
        "slim/php-view": "^2.0",
        "monolog/monolog": "^1.17",
        "lcobucci/jwt": "^3.2"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Src\\Controller\\": "src/controllers",
            "Src\\Model\\": "src/models",
            "Src\\Helper\\": "src/helpers",
            "Src\\Middleware\\": "src/middleware"
        }
    },
    "config": {
        "process-timeout" : 0
    },
    "scripts": {
        "start": "php -S localhost:8080 -t public",
        "test": "phpunit"
    }
}
